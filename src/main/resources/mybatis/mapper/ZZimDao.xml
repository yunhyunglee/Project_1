<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.himedia.project_1.dao.IZZimDao">

    <select id="getZzimList" parameterType="int" resultType="com.himedia.project_1.dto.ZzimVo">
        SELECT z.id,
               z.user_id AS userId,
               p.cseq,  -- 상품 고유 ID
               p.title,
               p.image,
               p.price
        FROM zzim z
                 INNER JOIN product p ON z.product_cseq = p.cseq
        WHERE z.user_id = #{userId}
    </select>

</mapper>
