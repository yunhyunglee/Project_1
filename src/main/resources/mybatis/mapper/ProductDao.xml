<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.himedia.project_1.dao.IProductDao">
    <select id="selectCategory" resultType="com.himedia.project_1.dto.ProductVo">
        SELECT * FROM product WHERE category = #{param1}
    </select>

    <!-- 특정 상품 ID로 조회 -->
    <select id="selectProductById" resultType="com.himedia.project_1.dto.ProductVo">
        SELECT * FROM product WHERE cseq = #{cseq}
    </select>

    <!-- 최신 상품 가져오기 -->
    <select id="selectNewProducts" resultType="com.himedia.project_1.dto.ProductVo">
        SELECT *
        FROM product
        ORDER BY indate DESC
            LIMIT 4
    </select>

    <!-- 베스트 상품 가져오기 -->
    <select id="selectBestProducts" resultType="com.himedia.project_1.dto.ProductVo">
        SELECT *
        FROM product
        WHERE bestyn = 'Y'
            LIMIT 4
    </select>
    <select id="getZzim" resultType="boolean">
        select count(*)>0 from zzim where uid=#{param1} and cnum=#{param2}
    </select>
    <insert id="insertZzim">
        insert into zzim values (#{param1},#{param2})
    </insert>
    <delete id="deleteZzim">
        delete from zzim where uid=#{param1} and cnum=#{param2}
    </delete>
    <select id="getProductById" parameterType="int" resultType="com.himedia.project_1.dto.ProductVo">
        SELECT * FROM product WHERE cseq = #{cseq}
    </select>
    <select id="getClassTime">
        select classtime from reservation where cseq=#{cseq} and payment='' order by classtime asc ;
    </select>
    <insert id="insertReservation">
        insert into reservation(userid,cseq,classday,classtime,people)
        values (#{userid},#{cseq},#{classday},#{classtime},#{people})
    </insert>
    <select id="getAllCount" resultType="_int">
        select count(*) from product where title like concat('%',#{param1},'%')
    </select>
    <select id="getSearchList" resultType="com.himedia.project_1.dto.ProductVo">
        select *from product where title like concat('%',#{param1},'%') order by cseq desc
            limit #{param2.displayRow} offset #{param2.startNum}
    </select>
</mapper>