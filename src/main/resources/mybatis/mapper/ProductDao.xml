<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.himedia.project_1.dao.IProductDao">
    <select id="selectCategory" resultType="com.himedia.project_1.dto.ProductVo">
        SELECT * FROM product WHERE category = #{param1}
    </select>

    <!-- 특정 상품 ID로 조회 -->
    <select id="selectProductById" parameterType="int" resultType="com.himedia.project_1.dto.ProductVo">
        SELECT * FROM product WHERE cseq = #{id}
    </select>

    <!-- 최신 상품 가져오기 -->
    <select id="selectNewProducts" resultType="com.himedia.project_1.dto.ProductVo">
        SELECT *
        FROM product
        ORDER BY indate DESC
            LIMIT 4
    </select>

    <!-- 베스트 상품 가져오기 -->
    <select id="selectBestProducts" resultType="com.himedia.project_1.dto.ProductVo">
        SELECT *
        FROM product
        WHERE bestyn = 'Y'
            LIMIT 4
    </select>
</mapper>